{
  "name": "nlgamap",
  "description": "JavaScript library for creating interactive thematic maps based on Leaflet.",
  "version": "1.0.0",
  "author": "Thomas Hurtig",
  "license": "BSD-3-Clause",
  "browserslist": "last 2 major versions, iOS >= 9.2, Android >= 4.1",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js --open chrome",
    "test": "karma start",
    "docs": "./node_modules/.bin/esdoc -c esdoc.json && npm run replace-version-string-docs",
    "build": "webpack --config webpack.build.js",
    "build-dist": "npm run docs && npm run zip-dist && npm run create-htaccess",
    "zip-dist": "cd dist && zip -q -r ../manual/NLGAMap_%npm_package_version%.zip *.js",
    "replace-version-string-docs": "./node_modules/.bin/replace \"%VERSION%\" \"%npm_package_version%\" manual/index.html manual/manual -r --include=\"*.html\"",
    "create-htaccess": "echo RewriteEngine On > manual/.htaccess && echo RewriteRule ^NLGAMap_latest.zip$ NLGAMap_%npm_package_version%.zip [L] >> manual/.htaccess"
  },
  "esnext": true,
  "dependencies": {
    "colorbrewer": "^1.1.0",
    "geostats": "^1.5.0",
    "hash-string": "^1.0.0",
    "innersvg-polyfill": "0.0.2",
    "leaflet": "^1.3.1",
    "leaflet-fullscreen": "^1.0.2",
    "lodash": "^4.17.4",
    "rainbowvis.js": "^1.0.1",
    "topojson-client": "^3.0.0",
    "wolfy87-eventemitter": "^5.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.32",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.32",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0-beta.32",
    "@babel/preset-env": "^7.0.0-beta.32",
    "@babel/runtime": "^7.0.0-beta.32",
    "babel-loader": "^8.0.0-beta.0",
    "chai": "~4.1.2",
    "css-loader": "^0.28.7",
    "esdoc": "^1.0.4",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-inject-script-plugin": "^1.0.0",
    "esdoc-plugin-transform-html": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "file-loader": "^1.1.5",
    "karma": "~1.7.1",
    "karma-chai": "~0.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-firefox-launcher": "~1.0.1",
    "karma-ie-launcher": "~1.0.0",
    "karma-mocha": "~1.3.0",
    "karma-mocha-reporter": "~2.2.5",
    "karma-phantomjs-launcher": "~1.0.4",
    "karma-sinon": "~1.0.5",
    "karma-webpack": "^2.0.6",
    "mocha": "~4.0.1",
    "replace": "^0.3.0",
    "sinon": "~4.1.2",
    "style-loader": "^0.19.0",
    "uglify-save-license": "^0.4.1",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "underscore-template-loader": "^0.8.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1"
  }
}
